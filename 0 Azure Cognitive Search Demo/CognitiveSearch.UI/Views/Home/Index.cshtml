@{
    ViewData["Title"] = "Home";
}


    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
<div class="home-page-background">
    <div class="content">
        <form method="get" asp-controller="Home" asp-action="Search">
            <div class="form-group">
                <label id="search-label">Search</label>
                <div id="search-input-group" class="input-group">
                    <input type="text" class="form-control advancedAutoComplete" name="q" id="index-search-input" placeholder="What are you searching for today?" autocomplete="off" style="height:50px">
                    <span class="input-group-btn">
                        <button id="index-search-submit" class="btn btn-default" type="submit"><span class="ms-Icon ms-Icon--Search"></span></button>
                    </span>
                </div>
            </div>
        </form>




        <div class="content row">
            <div class="col-md-4 link-div">
                <h3  style="color: #fff;">LEARN MORE</h3>
                <div style="font-size:20px;">
                    <a style="color: #fff;" href="https://docs.microsoft.com/en-us/azure/search/search-what-is-azure-search">Azure Cognitive Search</a>
                </div>
                <div style="font-size:20px;">
                    <a style="color: #fff;" href="https://docs.microsoft.com/en-us/azure/cognitive-services/Welcome">Cognitive Services</a>
                </div>
                <div style="font-size:20px;">
                    <a style="color: #fff;" href="https://docs.microsoft.com/en-us/azure/devops/pipelines/targets/azure-machine-learning?view=azure-devops&tabs=yaml">Azure Machine Learning</a>
                </div>
                <div style="font-size:20px;">
                    <a style="color: #fff;" href="https://azure.microsoft.com/en-us/resources/knowledge-mining-the-next-wave-of-artificial-intelligence-led-transformation/">Knowledge Mining</a>
                </div>
            </div>
        </div>


    </div>
</div>
